<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="@dimen/dialog_width" android:layout_height="wrap_content"
	android:gravity="center_horizontal">
	

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/letter_dailog_main" android:orientation="horizontal"
		android:layout_height="wrap_content" android:layout_width="wrap_content">
		<TextView android:id="@+id/letter_item_name" android:text="AAA"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FFF" android:textSize="@dimen/dialog_letter_size"  />


		
			
			<TextView android:text="TextView" android:id="@+id/dialog_phonic"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:gravity="bottom"
				android:textSize="@dimen/dialog_phonic_size"
				>
			</TextView>
		



	</LinearLayout>
	<Button android:layout_height="wrap_content" android:id="@+id/dialog_cancel" android:layout_width="wrap_content" android:text="@string/ok"
	
	android:layout_gravity="center_horizontal"
	android:layout_margin="10px"
	></Button>


</LinearLayout>
